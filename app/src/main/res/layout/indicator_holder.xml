<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/indicator_card_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart=".5dp"
        android:layout_marginTop=".5dp"
        android:layout_marginEnd=".5dp"
        android:layout_marginBottom=".5dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="0dp">
        <!--        cardElevation is used to determine the size and softness of the shadow so as to realistically depict the depth.-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/indicator_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@color/light_pink_shade_1"
                tools:ignore="ContentDescription" />

            <View
                android:id="@+id/active_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_blue_A400" />
        </FrameLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>